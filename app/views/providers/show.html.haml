%h3
  = @provider.first_name
  = @provider.last_name
%hr
%table
  %thead
    %tr
      %th Distance (Miles)
      %th Price
  %tbody
    - if @quote_tables.any?
      - @quote_tables.each do |quote|
        %tr
          %td
            = quote.desc
          %td
            = quote.price
- if current_user.roles == 'provider' && current_user.id == @provider.id
  %h4 Current Requests
  - if @customer_requests.any?
    %table
      %thead
        %tr
          %th Title
          %th Description
      %tbody
        - if @customer_requests.any?
          - @customer_requests.each do |request|
            %tr
              %td
                = request.title
              %td
                = request.info
- if current_user.roles == 'user'
  %h4 New Request
  = render 'requestform'
